{
    "build": {
        "dockerfile": "Dockerfile"
    },
    "hostRequirements": {
        "cpus": 2
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-toolsai.jupyter",
                "ms-python.python",
                "albertopdrf.root-file-viewer",
                "ms-vscode.cpptools"
            ]
        }
    },
    "postCreateCommand": "cp -r $ROOTSYS/etc/notebook/kernels/root ~/.local/share/jupyter/kernels"
}
